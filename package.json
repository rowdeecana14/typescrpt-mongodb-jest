{
  "name": "NODEJS + TYPESCRIPT +_JEST + MONGODB",
  "version": "1.0.0",
  "description": "For practice only",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --detectOpenHandles",
    "testing": "jest -- mongo.test.ts --detectOpenHandles",
    "dev": "nodemon",
    "build": "rimraf ./dist && tsc -p .",
    "prod": "node ./dist/index.js",
    "lint:check": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix --ext src/**/*.ts",
    "prettier:check": "prettier --check \"src/**/*.{ts,css,js,html}\" --config .prettierrc.json",
    "prettier:fix": "prettier --write \"src/**/*.{ts,css,js,html}\" --config .prettierrc.json",
    "migration:up": "ts-node ./src/v1/database/migrations/__BaseMigration.ts up",
    "migration:down": "ts-node ./src/v1/database/migrations/__BaseMigration.ts down",
    "seeder:up": "ts-node ./src/v1/database/seeders/__BaseSeeder.ts up",
    "seeder:down": "ts-node ./src/v1/database/seeders/__BaseSeeder.ts down",
    "database:up": "npm run migration:up && npm run seeder:up",
    "database:down": "npm run migration:down &% npm run seeder:down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/ms": "^0.7.31",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "winston": "^3.10.0"
  }
}
