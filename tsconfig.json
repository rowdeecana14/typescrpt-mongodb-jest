{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src/v1/", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", 
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}